<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Confirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= display_event(person.event) %></td>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.confirmed %></td>
        <td><%= link_to 'Show', [@event, person] %></td>
        <td><%= link_to 'Edit', edit_event_person_path(@event, person) %></td>
        <td><%= link_to 'Destroy', [@event, person], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_event_person_path(@event) %>
